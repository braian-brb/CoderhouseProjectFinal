<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card bg-dark">
            <div class="card-header">
                Add new product
            </div>
            <div class="card-body">
                <form action="/api/products" method="POST">
                <div class="form-group mb-2">
                    <input type="text" class="form-control" name="name" placeholder="Name">
                </div>
                <div class="form-group mb-2">
                    <input type="text" class="form-control" name="code" placeholder="Code">
                </div>
                <div class="form-group mb-2">
                    <input type="number" class="form-control" name="price" placeholder="Price $">
                </div>
                <div class="form-group mb-2">
                    <input type="number" class="form-control" name="stock" placeholder="Stock">
                </div>
                <div class="form-group mb-2">
                    <input type="text" class="form-control" name="thumbnail" placeholder="Thumbnail">
                </div>
                <div class="mb-2">
                    <textarea placeholder="Description" name="description"  class="form-control"></textarea>
                </div>
                <button class="btn btn-primary btn-block w-100">Save Product!</button>
                </form>
            </div>
        </div>
    </div>
</div